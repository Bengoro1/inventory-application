<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <%- include('partials/header', {title: title}) %>
  <form action="/pc_component/<%= component_url %>/<%= product.id %>/update" method="post">
    <% columns.forEach(column => { %>
      <label for="<%= column.column_name %>"><%= column.column_name.charAt(0).toUpperCase() + column.column_name.slice(1).replace(/_/g, ' ') %></label>
      <input 
        type="<%= column.data_type == 'text' ? 'text' : 'number' %>" 
        name="<%= column.column_name %>" 
        id="<%= column.column_name %>"
        value="<%= product[column.column_name] || '' %>"
      >
    <% }); %>
    <button type="submit">Update</button>
  </form>
  <a href="/pc_component/<%= component_url %>/<%= product.id %>">Back</a>
  <%- include('partials/footer') %>
</body>
</html>